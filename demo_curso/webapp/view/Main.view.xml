<mvc:View controllerName="demoname.democurso.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
         <Panel headerText="LABORATORIO SAP UI4 CN" class="sapUiSmallMargin"  width="90%" height="90%">
            <Panel headerText="Clientes" class="sapUiSmallMargin"  width="80%" height="50%">
                 <Table id="clientes" >
                <columns>
                    <Column >
                        <header>
                            <Label text="{i18n>id}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Id Integrantes}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Nombres}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Relacion}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Fecha Nac.}"></Label>
                        </header>
                    </Column>
                     <Column >
                        <header>
                            <Label text="{i18n>Sexo}"></Label>
                        </header>
                    </Column>

                </columns>
                <items >
                    <ColumnListItem type="{= ${vuelos>Vuelos}.length > 0 ? 'Navigation' : 'Inactive' }" >
                        <cells>
                            <Label text="{vuelos>Carrid}"></Label>
                            <Label text="{vuelos>Carrname}"></Label>
                            <Label text="{vuelos>Currcode}"></Label>
                            <Label text="{vuelos>Url}"></Label>
                            <Label text="{= ${vuelos>Vuelos}.length}"></Label>
                        </cells>

                    </ColumnListItem>
                </items>
            </Table>
                    
            </Panel>
            <Panel headerText="Integrantes" class="sapUiSmallMargin"  width="80%" height="30%">
                
                    
            </Panel>
                    
            </Panel>
            
           
         
    </Page>
</mvc:View>
